<Window x:Class="WirelessControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wifi Control" MinHeight="100" MinWidth="240" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0" Grid.Row="0" Content="Disable" Width="auto" Height="80" Click="Disable_Click" />
        <Button Grid.Column="1" Grid.Row="0" Content="Enable" Width="auto" Height="80" Click="Enable_Click"/>
        
    </Grid>
</Window>
